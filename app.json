{
  "name": "ECO API",
  "description": "NestJS API with MongoDB for polling unit management",
  "repository": "https://github.com/McToluene/eco",
  "keywords": ["nestjs", "mongodb", "api", "polling", "admin"],
  "website": "https://github.com/McToluene/eco",
  "success_url": "/health",
  "scripts": {
    "postdeploy": "node dist/scripts/create-admin.js"
  },
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    },
    "ACCESS_SECRET": {
      "description": "JWT secret key for authentication (will be auto-generated)",
      "generator": "secret",
      "required": true
    },
    "ADMIN_USERNAME": {
      "description": "Admin username for initial admin user",
      "value": "admin",
      "required": false
    },
    "ADMIN_PASSWORD": {
      "description": "Admin password (auto-generated, change after first login)",
      "generator": "secret",
      "required": false
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string (e.g., from MongoDB Atlas)",
      "required": true
    },
    "PORT": {
      "description": "Port number (Heroku will set automatically)",
      "value": "3000",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": []
}
